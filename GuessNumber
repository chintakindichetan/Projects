import random
n = random.randint(1, 10)
x = None
count=3
while x != n:
    print("You have {} Chance".format(count))
    guess = input("guess a number between 1 and 10: ")
    guess = int(x)
    if count==1:
	    print("----------Game Over----------")
	    break
    elif x == n:
        print("congratulations! you won!")
        break
    else:
        count-=1
        print("nope, sorry. try again!")
